{
  "name": "vite-electron-demo",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "description": "单机版公文登记督办系统",
  "main": "electron/main.js",
  "author": "lidexin",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"vite\" \"electron .\"",
    "build:vue": "vue-tsc -b && vite build",
    "build": "npm run build:vue && npm run build:electron",
    "preview": "vite preview",
    "build:electron": "electron-builder"
  },
  "build": {
    "appId": "com.xinxiuhai.docman",
    "productName": "docman",
    "asar": true,
    "icon": "icon.png",
    "directories": {
      "output": "release/"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "extraFiles": [
      {
        "from": "src/assets",
        "to": "release/assets"
      }
    ],
    "files": [
      "electron/**/*",
      "dist/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "concurrently": "^9.2.1",
    "element-plus": "^2.11.7",
    "sqlite3": "^5.1.7",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@types/node": "^24.6.0",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/runtime-core": "^3.5.22",
    "@vue/tsconfig": "^0.8.1",
    "cross-env": "^10.1.0",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.3",
    "vite": "^7.1.7",
    "vite-electron-plugin": "^0.8.3",
    "vue-tsc": "^3.1.3"
  }
}
